<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    xmlns:viewmodels="clr-namespace:Finalspace.Onigiri.ViewModels"
    xmlns:converters="clr-namespace:Finalspace.Onigiri.Converters"
    xmlns:controls="clr-namespace:Finalspace.Onigiri.Controls"
    x:Class="Finalspace.Onigiri.Views.CardListPage"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="1300"
    d:DataContext="{d:DesignInstance viewmodels:MainViewModel, IsDesignTimeCreatable=True}"
    FontFamily="Arial"
    Title="ListViewPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fuck.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="listboxBackground" >
                <SolidColorBrush.Color>
                    <Color R="214" G="224" B="239" A="255" />
                </SolidColorBrush.Color>
            </SolidColorBrush>
            <SolidColorBrush x:Key="listboxItemBackground" >
                <SolidColorBrush.Color>
                    <Color R="245" G="246" B="149" A="222" />
                </SolidColorBrush.Color>
            </SolidColorBrush>
            <converters:AnimeDescriptionConverter x:Key="animeDescConv" />
        </ResourceDictionary>
    </Page.Resources>
    <ListBox VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.IsContainerVirtualizable="True" VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.CacheLengthUnit="Page" VirtualizingPanel.CacheLength="1,1" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="lvAnimes" ItemsSource="{Binding AnimesView, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" FontSize="16">
        <ListBox.Style>
            <Style TargetType="ListBox">
                <Style.Setters>
                    <Setter Property="Background" Value="{StaticResource listboxBackground}" />
                </Style.Setters>
                <Style.Triggers>
                    <Trigger Property="HasItems" Value="False">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBox}">
                                    <TextBlock Text="No animes found."/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ListBox.Style>
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <vwp:VirtualizingWrapPanel SpacingMode="StartAndEndOnly" StretchItems="False" Orientation="Vertical">
                    <vwp:VirtualizingWrapPanel.ChildrenSize>
                        <!-- Need to add margin to it, because its WPF -->
                        <Size Width="660" Height="300" />
                    </vwp:VirtualizingWrapPanel.ChildrenSize>
                </vwp:VirtualizingWrapPanel>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemContainerStyle>
            <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Height" Value="280" />
                <Setter Property="Background" Value="{StaticResource listboxItemBackground}" />
            </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="440" />
                    </Grid.ColumnDefinitions>

                    <!-- Image block start -->
                    <Grid Grid.Column="0">
                        <!-- Picture start -->
                        <Image Stretch="UniformToFill">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource animeImageConverter}" FallbackValue="{StaticResource noPictureImage}">
                                    <Binding Path="Aid" Mode="OneWay" UpdateSourceTrigger="PropertyChanged" IsAsync="True" />
                                    <Binding Path="DataContext" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Page}}" IsAsync="True"/>
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <!-- Picture end -->
                        
                        <!-- Anime title start -->
                        <Grid VerticalAlignment="Bottom">
                            <Grid.Background>
                                <SolidColorBrush Color="Black" Opacity="0.75" />
                            </Grid.Background>
                            <TextBlock Padding="10" Foreground="White" Text="{Binding MainTitle, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=Anime title very extreme long}" TextWrapping="Wrap" FontSize="18" />
                        </Grid>
                        <!-- Anime title end -->
                    </Grid>
                    <!-- Image block end -->

                    <!-- Content start -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="56" />
                        </Grid.RowDefinitions>

                        <!-- Header start -->
                        <DockPanel Grid.Row="0" LastChildFill="True" Background="{StaticResource headerBackground}">
                            <StackPanel DockPanel.Dock="Right"  ToolTip="{Binding PermanentRating, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Horizontal" Margin="0 0 6 0">
                                <Image Name="imgRatingIcon1" Style="{StaticResource ratingIcon0}" />
                                <Image Name="imgRatingIcon2" Style="{StaticResource ratingIcon1}" />
                                <Image Name="imgRatingIcon3" Style="{StaticResource ratingIcon2}" />
                                <Image Name="imgRatingIcon4" Style="{StaticResource ratingIcon3}" />
                                <Image Name="imgRatingIcon5" Style="{StaticResource ratingIcon4}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Margin="8 0 8 0">
                                    <TextBlock Text="{Binding EpCount, Mode=OneWay, StringFormat=\{0\} Episodes, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontWeight="Bold" />
                                    <TextBlock Text=" " FontSize="14" FontWeight="Bold" />
                                    <TextBlock Text="{Binding Type, Mode=OneWay, StringFormat=(\{0\}), TargetNullValue=None, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontWeight="Bold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="8 0 8 0">
                                    <TextBlock Text="{Binding StartDate, Mode=OneWay, StringFormat=yyyy-MM-dd, TargetNullValue=None, UpdateSourceTrigger=PropertyChanged}" FontSize="18" FontWeight="Bold"  />
                                    <TextBlock Text="/" Style="{StaticResource animeSublines}" FontSize="18" FontWeight="Bold"  />
                                    <TextBlock Text="{Binding EndDate, Mode=OneWay, StringFormat=yyyy-MM-dd, TargetNullValue=None, UpdateSourceTrigger=PropertyChanged}" FontSize="18" FontWeight="Bold"  />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <!-- Header end -->

                        <!-- Description start -->
                        <TextBlock Grid.Row="1" Padding="8" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Description, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource animeDescConv}, ConverterParameter=500}" FontSize="14" />
                        <!-- Description end -->

                        <!-- Tags start, ItemsControl needs a fixed width -->
                        <Grid Grid.Row="2" Background="{StaticResource tagsBackground}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0 0 6 0">
                                <Button Width="24" Height="24">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Image Source="/Resources/add_32x32.png" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <ItemsControl x:Name="tagItems" Grid.Column="0" FontSize="12" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" ItemsSource="{Binding TopCategories}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Margin="2" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="4" Margin="2" Background="BlueViolet" CornerRadius="4">
                                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" ToolTip="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Foreground="White" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <!-- Tags end -->
                        
                    </Grid>
                    <!-- Content end -->
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Page>
