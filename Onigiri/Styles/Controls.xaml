<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="lightBackgrund">#FFDFE9F5</SolidColorBrush>
    <SolidColorBrush x:Key="darkBackgrund">Gray</SolidColorBrush>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="UserControl">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Window">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Page">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Ribbon" xmlns:mwt="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic" xmlns:swcrp="clr-namespace:System.Windows.Controls.Ribbon.Primitives;assembly=System.Windows.Controls.Ribbon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TabControl">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource lightBackgrund}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=RibbonWindow}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                <DataTrigger.Setters>
                    <Setter Property="Background" Value="{StaticResource darkBackgrund}" />
                </DataTrigger.Setters>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>